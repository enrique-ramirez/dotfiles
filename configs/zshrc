# Custom ZSH configuration - Personal preferences and aliases
# Note: Tool-specific configurations (NVM, pnpm, gcloud) are added by their installers
# Note: Oh My Zsh plugins are configured directly in ~/.zshrc by install.sh

# ===== Custom Aliases =====
# Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Better commands (only alias if installed)
if command -v eza &> /dev/null; then
    alias ls='eza --icons --group-directories-first'
    alias ll='eza -la --icons --group-directories-first'
    alias lt='eza -la --icons --tree --level=2'
else
    alias ls='ls -G'
    alias ll='ls -lah'
fi

if command -v bat &> /dev/null; then
    alias cat='bat --paging=never'
    alias catp='bat'  # bat with pager
fi

if command -v rg &> /dev/null; then
    alias grep='rg'
fi

if command -v fd &> /dev/null; then
    alias find='fd'
fi

# Git shortcuts (supplements gitconfig aliases)
alias gst='git status'
alias gco='git checkout'
alias gcm='git commit'
alias gaa='git add --all'
alias gp='git push'
alias gl='git pull'
alias glog='git log --oneline --decorate --graph'

# Docker shortcuts
alias dc='docker compose'
alias dps='docker ps'
alias dimg='docker images'

# Quick edit configs
alias zshrc='${EDITOR:-cursor} ~/.zshrc'
alias dotfiles='cd ~/Projects/dotfiles'

# ===== Environment Variables =====
export EDITOR='cursor --wait'
export VISUAL='cursor'

# ===== Path additions =====
# Add local bin to path (for user-installed binaries)
export PATH="$HOME/.local/bin:$PATH"